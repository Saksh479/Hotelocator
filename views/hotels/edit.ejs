<% layout('./layouts/boilerplate') %>
  <div class="container-fluid justify-center">
    <h1>Edit Hotel</h1>
    <br />
    <form
      action="/hotels/<%=hotel.id%>?_method=PUT"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="position-absolute start-0 container-xl w-25">
        <div class="form-group">
          <label for="title">Title</label>
          <input
            class="form-control"
            type="text"
            placeholder="Title"
            name="title"
            id="title"
            value="<%=hotel.title%>"
            readonly
            style="cursor: default"
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea
            class="form-control"
            placeholder="Description"
            name="description"
            id="description"
            cols="30"
            rows="2"
            required
          >
<%=hotel.description%></textarea
          >
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="form-group">
          <label for="price">Price</label>
          <input
            class="form-control"
            type="number"
            placeholder="Price"
            name="price"
            id="price"
            value="<%=hotel.price%>"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="form-group">
          <label for="rating">Rating</label>
          <input
            class="form-control"
            type="number"
            placeholder="Rating"
            name="rating"
            id="rating"
            value="<%=hotel.rating%>"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="form-group">
          <label for="location">Location</label>
          <input
            class="form-control"
            type="text"
            placeholder="Location"
            name="location"
            id="location"
            value="<%=hotel.location%>"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <br />
        <div class="btn-group" role="group">
          <a href="/hotels/<%=hotel.id%>" class="btn btn-light"
            >Go back to Hotel</a
          >
          <button class="btn btn-dark" type="submit">Submit</button>
        </div>
      </div>
    </form>
  </div>
<script>
  // Enable Bootstrap validation styles
  (function () {
    "use strict";

    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    var forms = document.querySelectorAll(".needs-validation");

    // Loop over them and prevent submission
    Array.prototype.slice.call(forms).forEach(function (form) {
      form.addEventListener(
        "submit",
        function (event) {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }

          form.classList.add("was-validated");
        },
        false
      );
    });
  })();
</script>
